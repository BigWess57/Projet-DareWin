{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Frontend",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "group": "groupB",
        "close": false
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start Hardhat node",
      "type": "shell",
      "command": "npx hardhat node",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "group": "groupA",
        "close": false
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Deploy Base contracts",
      "type": "shell",
      "command": "sleep 5 && npx hardhat run scripts/deployTokenAndFactory.js --network localhost",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "group": "groupA",
        "close": false
      },
      "problemMatcher": []
    },
    {
      "label": "Clean and setup local graphQL",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "sudo rm -rf data/ && docker-compose down -v && docker-compose up -d --wait && cd .. && graph codegen && graph build && npm run create-local && npm run deploy-local && exec bash"
      ],
      "options": {
        "cwd": "${workspaceFolder}/backend/ChallengeSubgraph/Graph-Node-Local"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "group": "groupA",
        "close": false
      },
      "isBackground": true,
      "problemMatcher": [],
      "dependsOn": [
        "Deploy Base contracts"
      ]
    },
    {
      "label": "Start All",
      "dependsOn": ["Start Frontend", "Start Hardhat node", "Deploy Base contracts", "Clean and setup local graphQL"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}